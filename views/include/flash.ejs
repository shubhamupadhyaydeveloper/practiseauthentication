<% if(success && success.length) {%>
    <div class="alert alert-success alert-dismissible fade show col-4 offset-5" role="alert">
        <h5><%= success %></h5>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if(error && error.length) {%>
    <div class="alert alert-danger alert-dismissible fade show col-4 offset-5" role="alert">
        <h3><%= error %></h3>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>